<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_chat_right"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"
            android:text="this is text message"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginStart="100dp"
        android:visibility="gone"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_voice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:visibility="visible"
        android:background="@drawable/bg_layout_round"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="-3dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_play_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_play_circle_filled_24"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:visibility="visible"
                />

        </RelativeLayout>
        <View
            android:id="@+id/v_length"
            android:layout_width="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />
        <Chronometer
            android:id="@+id/tv_duration"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="01:00"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>